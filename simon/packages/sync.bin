BASE=/Volumes/Builds/packages
TARGET=high-sierra-x86_64
VER=4.0

set -ve

echo " - Remove old versions ..."
cd "$BASE"
./rmdup "$TARGET/bin/$VER/*.tgz"
echo " - Update cache ..."
cd "$BASE/$TARGET/" && make -j8 -f ../Makefile.bin
cd "$BASE/$TARGET/meta/"
echo " - generating PACKAGES* ..."
Rscript ../../mkPACKAGES.R
echo " - copying ..."
cp -p PACKAGES* ../bin/$VER/
cd ../..
echo " - rsync to Dune ..."
echo rsync --delete-after -av $TARGET/bin/$VER/ urbanek@mac.R-project.org:/R/cran/bin/macosx/contrib/$VER/
